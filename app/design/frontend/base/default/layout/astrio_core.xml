<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem" ifconfig="astrio_core/cart_ajax/enabled"><type>skin_js</type><script>astrio/core/js/cartajax.js</script></action>
        </reference>
        <reference name="before_body_end">
            <block type="astrio_core/initCartAjax" name="init_cart_ajax" template="astrio/core/init_cart_ajax.phtml"/>
        </reference>
    </default>

    <astrio_core_cart_addbyajax>
        <reference name="root">
            <action method="setCartAjaxUpdateBlocks"><blocks>cart_sidebar,minicart_head</blocks></action>
        </reference>
    </astrio_core_cart_addbyajax>
</layout>