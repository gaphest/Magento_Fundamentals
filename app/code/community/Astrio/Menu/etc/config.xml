<?xml version="1.0"?>
<config>
    <modules>
        <Astrio_Menu>
            <version>1.0.0</version>
        </Astrio_Menu>
    </modules>
    <global>
        <blocks>
            <astrio_menu>
                <class>Astrio_Menu_Block</class>
            </astrio_menu>
        </blocks>
        <helpers>
            <astrio_menu>
                <class>Astrio_Menu_Helper</class>
            </astrio_menu>
        </helpers>
        <models>
            <astrio_menu>
                <class>Astrio_Menu_Model</class>
                <resourceModel>astrio_menu_resource</resourceModel>
            </astrio_menu>
            <astrio_menu_resource>
                <class>Astrio_Menu_Model_Resource</class>
                <entities>
                    <menu_item>
                        <table>astrio_menu_item</table>
                    </menu_item>
                    <menu_item_store>
                        <table>astrio_menu_item_store</table>
                    </menu_item_store>
                </entities>
            </astrio_menu_resource>
        </models>

        <resources>
            <astrio_menu_setup>
                <setup>
                    <module>Astrio_Menu</module>
                </setup>
            </astrio_menu_setup>
        </resources>
    </global>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <astrio_menu before="Mage_Adminhtml">Astrio_Menu_Adminhtml</astrio_menu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <astrio_menu>
                    <file>astrio_menu.xml</file>
                </astrio_menu>
            </updates>
        </layout>
        <translate>
            <modules>
                <Astrio_Menu>
                    <files>
                        <default>Astrio_Menu.csv</default>
                    </files>
                </Astrio_Menu>
            </modules>
        </translate>
    </adminhtml>
    
    <frontend>
        <layout>
            <updates>
                <astrio_menu>
                    <file>astrio_menu.xml</file>
                </astrio_menu>
            </updates>
        </layout>
        <translate>
            <modules>
                <Astrio_Menu>
                    <files>
                        <default>Astrio_Menu.csv</default>
                    </files>
                </Astrio_Menu>
            </modules>
        </translate>
    </frontend>

    <default>
        <astrio_menu>
            <settings>
                <sections_count>4</sections_count>
            </settings>
        </astrio_menu>
    </default>
</config>