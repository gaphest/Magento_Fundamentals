<?xml version="1.0"?>
<config>
    <modules>
        <Astrio_Core>
            <version>1.0.0</version>
        </Astrio_Core>
    </modules>
    <global>
        <blocks>
            <astrio_core>
                <class>Astrio_Core_Block</class>
            </astrio_core>
            <widget>
                <rewrite>
                    <adminhtml_widget_instance_edit_tab_main_layout>Astrio_Core_Rewrite_Mage_Widget_Block_Adminhtml_Widget_Instance_Edit_Tab_Main_Layout</adminhtml_widget_instance_edit_tab_main_layout>
                </rewrite>
            </widget>
        </blocks>
        <helpers>
            <astrio_core>
                <class>Astrio_Core_Helper</class>
            </astrio_core>
        </helpers>
        <models>
            <astrio_core>
                <class>Astrio_Core_Model</class>
                <resourceModel>astrio_core_resource</resourceModel>
            </astrio_core>
            <astrio_core_resource>
                <class>Astrio_Core_Model_Resource</class>
            </astrio_core_resource>

            <widget>
                <rewrite>
                    <widget_instance>Astrio_Core_Rewrite_Mage_Widget_Model_Widget_Instance</widget_instance>
                </rewrite>
            </widget>
            <!--catalog_resource>
                <rewrite>
                    <product_indexer_eav_source>Astrio_Core_Rewrite_Mage_Catalog_Model_Resource_Product_Indexer_Eav_Source</product_indexer_eav_source>
                </rewrite>
            </catalog_resource>
            <eav>
                <rewrite>
                    <entity_attribute_source_table>Astrio_Core_Rewrite_Mage_Eav_Model_Entity_Attribute_Source_Table</entity_attribute_source_table>
                </rewrite>
            </eav-->
            <enterprise_urlrewrite>
                <rewrite>
                    <url_rewrite_request>Astrio_Core_Rewrite_Enterprise_UrlRewrite_Model_Url_Rewrite_Request</url_rewrite_request>
                </rewrite>
            </enterprise_urlrewrite>
        </models>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <astrio_core before="Mage_Adminhtml">Astrio_Core_Adminhtml</astrio_core>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <astrio_core>
                    <file>astrio_core.xml</file>
                </astrio_core>
            </updates>
        </layout>
        <translate>
            <modules>
                <Astrio_Core>
                    <files>
                        <default>Astrio_Core.csv</default>
                    </files>
                </Astrio_Core>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <astrio_core>
                    <file>astrio_core.xml</file>
                </astrio_core>
            </updates>
        </layout>
        <translate>
            <modules>
                <Astrio_Core>
                    <files>
                        <default>Astrio_Core.csv</default>
                    </files>
                </Astrio_Core>
            </modules>
        </translate>
        <routers>
            <astrio_core>
                <use>standard</use>
                <args>
                    <module>Astrio_Core</module>
                    <frontName>astrio_core</frontName>
                </args>
            </astrio_core>
        </routers>
        <events>
            <controller_action_layout_render_before>
                <observers>
                    <add_author_link>
                        <type>singleton</type>
                        <class>astrio_core/observer</class>
                        <method>addAuthorLink</method>
                    </add_author_link>
                </observers>
            </controller_action_layout_render_before>
        </events>
    </frontend>
</config>