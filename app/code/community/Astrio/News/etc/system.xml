<?xml version="1.0"?>
<config>
    <sections>
        <astrio_news translate="label" module="astrio_news">
            <label>News</label>
            <tab>astrio_all</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000030</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <seo translate="label">
                    <label>Search Engine Optimizations</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <route_url_key translate="label comment">
                            <label>News Route URL Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </route_url_key>
                        <category_route_url_key translate="label comment">
                            <label>News Category Route URL Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </category_route_url_key>
                        <url_suffix translate="label comment">
                            <label>URL Suffix</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>catalog/system_config_backend_catalog_url_rewrite_suffix</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url_suffix>  
                        <list_meta_title translate="label">
                            <label>News List: Page Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </list_meta_title>
                        <list_meta_keywords translate="label">
                            <label>News List: Meta keywords</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </list_meta_keywords>
                        <list_meta_description translate="label">
                            <label>News List: Meta description</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </list_meta_description>
                        <use_canonical_tag translate="label">
                            <label>Use Canonical Link Meta Tag For News</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_canonical_tag>
                    </fields>
                </seo>
            </groups>
        </astrio_news>
    </sections>
</config>