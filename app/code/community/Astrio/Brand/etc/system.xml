<?xml version="1.0"?>
<config>
    <tabs>
        <astrio_all translate="label" module="astrio_brand">
            <label>Astrio Extensions</label>
            <sort_order>350</sort_order>
        </astrio_all>
    </tabs>
    <sections>
        <astrio_brand translate="label" module="astrio_brand">
            <label>Brands</label>
            <tab>astrio_all</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000020</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <seo translate="label">
                    <label>Search Engine Optimizations</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <brand_url_suffix translate="label comment">
                            <label>Brand URL Suffix</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>catalog/system_config_backend_catalog_url_rewrite_suffix</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Cache refresh needed.</comment>
                        </brand_url_suffix>
                        <product_use_brands translate="label">
                            <label>Use Brands Path for Product URLs</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_use_brands>
                        <save_rewrites_history translate="label">
                            <label>Create Permanent Redirect for URLs if URL Key Changed</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </save_rewrites_history>
                        <brands_list_url_key translate="label comment">
                            <label>Brands List page URL Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Without url suffix (Brand URL Suffix will be used).</comment>
                        </brands_list_url_key>
                        <brands_list_meta_title translate="label">
                            <label>Brands List: Page Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brands_list_meta_title>
                        <brands_list_meta_keywords translate="label">
                            <label>Brands List: Meta keywords</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brands_list_meta_keywords>
                        <brands_list_meta_description translate="label">
                            <label>Brands List: Meta description</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brands_list_meta_description>
                        <use_canonical_tag translate="label">
                            <label>Use Canonical Link Meta Tag For Brands</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_canonical_tag>
                    </fields>
                </seo>
            </groups>
        </astrio_brand>
    </sections>
</config>